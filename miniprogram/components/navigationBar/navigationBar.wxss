/* components/navigationBar/navigationBar.wxss */
.navbar {
  width: 100%;
  height: 175rpx;     /* hint!!! */
  background-color: rgba(14,14,15,0.63);
  border: none;

  position: fixed;
  top: 0;
  left: 0;
  z-index: 666;

  transition: .8s cubic-bezier(.2,.8,.2,1);
}
.navbar.outdrop {
  top: -180rpx;
}

.navbar .blur {
  width: 100%;
  height: 175rpx;
  position: absolute;
  top: 0;
  left: 0;
  backdrop-filter: blur(15px);
}

.navbar text {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  text-align: center;
  color: rgba(255,255,255,.83);
}