<!--components/wall/favoritecard/favoritecard.wxml-->
<view class="favoritecard-container {{ fold_class }}"
  style="height: {{ favorite_height }}; left: {{ posLeft }}; background-image: url(../../../../../resource/img/favorite/card.png)"
  bindtap="onFavoriteCardTap" catchtouchmove="true"
  bindtouchstart="touchStart" bindtouchend="touchEnd">

  <view class="favoritecard-info">
    <view>
      <text>统计</text>
      <text class="iconfont iconaixin"></text>
      <text>信息</text>
    </view>
    <view>
      <text>TONGJIXINXITONGJIXINXITONGJIXINXITONGJIXINXITONGJIXINXI</text>
    </view>
  </view>

  <view class="favoritecard-info-unfold">

    <image class="favoritecard-bgdecorate-unfold" src="../../../resource/img/favorite/bg.png"></image>

    <view class="favoritecard-container-unfold">
      <form>
        <view class="favoritecard-logo">
          <text class="iconfont iconshezhi"></text>
        </view>

        <view class="favoritecard-block favoritecard-default">
          <view class="favoritecard-title-group">
            <text>默认信息</text>
            <text></text>
          </view>

          <view class="default-container">
            <image src="../../../resource/img/avatar/avatar.jpg"></image>
            <view class="default-text-group">
              <text>doubleZ</text>
              <text>男生</text>
              <text> <text class="iconfont icontishi"></text> 默认信息和微信账号同步，如欲修改请直接修改微信账号下个人信息</text>
            </view>
          </view>
        </view>

        <view class="favoritecard-block favoritecard-settable">
          <view class="favoritecard-title-group">
            <text>数据统计</text>
            <text></text>
          </view>

          <view class="favorite-statistic-group">

            <view class="statistic-container" wx:for="{{ statistic_array }}">
              <text class="iconfont iconqueren"></text>
              <text>我发布的表白数量: </text>
              <text>{{ item }}</text>
            </view>

          </view>

        </view>

        <view class="favorite-seal">
          <text class="iconfont iconqueren"></text>
        </view>
      </form>
    </view>

  </view>

</view>