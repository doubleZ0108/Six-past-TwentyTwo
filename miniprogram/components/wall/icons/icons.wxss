/* components/wall/icons/icons.wxss */
.icons-container {
  position: absolute;
  top: 175px;
  width: 100%;
  height: 50px;
  margin-top: 10px;
  margin-bottom: 10px;

  display: grid;
  grid-template-columns: repeat(4, auto);
  align-items: center;
  justify-items: center;
}

.icon-group {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

  border-top: rgba(255, 255, 255, .5) 5rpx solid;
}

.icon-selected {
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.5), rgba(255,255,255,0.1));
}

.icon-group text {
  font-size: 40rpx;
  color: rgba(255, 255, 255, .7);
}