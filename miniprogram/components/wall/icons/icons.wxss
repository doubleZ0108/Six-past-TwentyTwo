/* components/wall/icons/icons.wxss */
@import '../../../style/iconfont.wxss';

.icons-container {
  position: absolute;
  top: 365rpx;
  width: 100%;
  height: 90rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;

  display: grid;
  grid-template-columns: repeat(4, auto);
  align-items: center;
  justify-items: center;
}

.icon-group {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

  border-top: 3rpx solid rgba(255, 255, 255, .38);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.11), rgba(255,255,255,0));
}

.icon-selected {
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.25), rgba(255,255,255,0.11));
}

.icon-group text {
  font-size: 35rpx;
  color: rgba(255, 255, 255, .6);
}

.icon-group.icon-selected text {
  color: rgba(255, 255, 255, .83);
}

.icon-group .iconfont {
  font-size: 40rpx;
  margin-right: 3rpx;
}