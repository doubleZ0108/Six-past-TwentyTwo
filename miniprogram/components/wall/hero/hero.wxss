/* components/wall/hero/hero.wxss */
.hero-container {
  position: absolute;
  width: 100%;
  height: 280rpx;
  margin-top: 45rpx;
  display: grid;
  grid-template-rows: repeat(2, auto);
  /* justify-content: center; */

  /* TODO: font setting */
  color: white;
  font-size: 30rpx;
}

.hero-inner-container {
  justify-self: flex-start;
  margin-left: 60rpx;
  margin-top: 45rpx;
  padding-right: 20rpx;
  display: grid;
  grid-template-columns: repeat(2, auto);
  align-items: center;
  justify-content: center;
  grid-gap: 50rpx;
  border-bottom: 1rpx dashed rgba(255,255,255,0.38);
}

.hero-container .hero-avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.hero-container .info-name {
  font-size: 45rpx;
}

.hero-container .info-motto {
  text-align: left;
  padding-top: 15rpx;
  padding-left: 60rpx;
  font-size: 20rpx;
  letter-spacing: 5rpx;
  color: rgba(255,255,255,.83);
}

.hero-container .info-container {
  display: grid;
  grid-template-rows: repeat(2, auto);
  grid-gap: 15rpx;
}

.hero-container .other-info-container {
  display: grid;
  grid-template-columns: repeat(2, auto);   /* TODO: 如果还有其他信息 修改这里 */
  grid-gap: 30rpx;
}