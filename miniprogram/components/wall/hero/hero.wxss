/* components/wall/hero/hero.wxss */
.hero-container {
  position: absolute;
  width: 100%;
  height: 200px;
  margin: 25px auto;
  display: grid;
  grid-template-rows: repeat(2, auto);
  justify-content: center;

  /* TODO: font setting */
  color: white;
  font-size: 40rpx;
}

.hero-inner-container {
  display: grid;
  grid-template-columns: repeat(2, auto);
  align-items: center;
  justify-content: center;
  grid-gap: 40px;
}

.hero-container .hero-avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.hero-container .info-motto {
  text-align: center;
}

.hero-container .info-container {
  display: grid;
  grid-template-rows: repeat(2, auto);
  grid-gap: 10px;
}

.hero-container .other-info-container {
  display: grid;
  grid-template-columns: repeat(2, auto);   /* TODO: 如果还有其他信息 修改这里 */
  grid-gap: 20px;
}