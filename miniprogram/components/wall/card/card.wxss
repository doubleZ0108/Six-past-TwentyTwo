/* components/wall/card/card.wxss */
@import '../../../style/iconfont.wxss';

.card-container {
  --card-width: 80%;
  height: 125px;
  width: var(--card-width);
  margin: 50px auto;

  display: grid;
  grid-template-rows: repeat(2, auto);
  grid-gap: 10px;
  justify-items: center;

  background: linear-gradient(104deg, rgba(101, 12, 245, 0.5), rgba(65, 95, 158, 0.5));
  border-radius: 30px;
  box-shadow: 0 10px 30px rgba(101, 12, 245, 0.5);
  backdrop-filter: blur(50px);
}

.card-people {
  align-self: flex-end;
  width: 80%;

  display: grid;
  grid-template-columns: 3fr 1fr 3fr;
  justify-items: center;

  grid-gap: 10px;
  align-items: center;
}

.card-people text {
  color: rgba(255,255,255,.75);
  font-size: 20px;
  font-weight: 400;
}

.card-people .iconfont {
  font-size: 35px;
}

.card-info {
  align-self: flex-start;
  width: 80%;

  display: grid;
  grid-template-columns: repeat(2, auto);
  justify-items: center;
  align-items: center;
}

.card-info image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.card-info text {
  color: rgba(255,255,255,.75);
  width: 90%;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}