<!--components/wall/card/card.wxml-->
<view class="card-container {{ unfold }}" bindtap="onCardTap">
  <view class="card-people">
    <text>{{ name_left }}</text>
    <text class="iconfont iconshouye"></text>
    <text>{{ name_right }}</text>
  </view>
  <view class="card-info">
    <image src="{{ avatar_url }}"></image>
    <text>{{ description }}</text>
  </view>

  <!-- hover后展示的详细信息 -->
  <view class="card-info-unfold">
    <text>111111111111111</text>
    <text>222222222222222</text>
    <text>333333333333333</text>
  </view>
</view>
