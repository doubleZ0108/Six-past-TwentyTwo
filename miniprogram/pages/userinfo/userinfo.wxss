/* miniprogram/pages/userinfo/userinfo.wxss */
@import '../../style/iconfont.wxss';

.toptips {
  top: 80rpx;
}

.userinfo-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  height: 100vh;
  overflow: hidden;

  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;

  color: rgba(255,255,255,.83);
  position: relative;
  transition: .8s linear;
}
.userinfo-container.userinfo-container-blur {
  filter: blur(30rpx);
}

.userinfo-container form {
  width: 80%;
}

.userinfo-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 75rpx;
}

.userinfo-logo .iconfont {
  font-size: 130rpx;
  background: linear-gradient(130deg, rgb(194,236,196),rgb(231, 237, 166)); 
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin: 0 auto;
}

.userinfo-block {
  margin: 75rpx auto;
}

/*============ title & line ============*/
.userinfo-title-group {
  height: 30rpx;
  margin: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.userinfo-title-group text:nth-child(1) {
  width: 40%;
  color: rgba(255,255,255,.83);
  font-family: Microsoft YaHei;
}
.userinfo-title-group text:nth-child(2) {
  width: 60%;
  border-top: solid rgba(255,255,255,.6) 2rpx; 
  margin: 13rpx 0;
}


/*============ defalut ============*/
.default-container {
  width: 90%;
  margin: 25rpx auto;
  display: grid;
  grid-template-columns: .8fr 1fr;
  /* grid-gap: 20rpx; */
  align-items: center;
  justify-content: center;
}

.default-container image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.default-text-group {
  border-left: 2rpx rgba(255,255,255,.5) solid;
}
.default-text-group > text {
  display: block;
  margin-left: 20rpx;
}

.default-text-group text:nth-child(1) {
  font-size: 40rpx;
}
.default-text-group text:nth-child(2) {
  font-size: 30rpx;
}
.default-text-group text:nth-child(3) {
  margin-top: 30rpx;
  font-size: 18rpx;
  color: rgba(255,255,255,.6);
  line-height: 1.25;
}

.default-text-group .iconfont.icontishi {
  font-size: 24rpx;
}

/*============ settable ============*/
.userinfo-settable picker,
.userinfo-settable input {
  width: 80%;
  margin: 45rpx auto;
  height: 35rpx;
  padding: 15rpx;
  border-radius: 50rpx;
  border: 2rpx rgba(239, 252, 223, 0.1) solid;
  background: linear-gradient(113deg, rgba(202, 248, 253, 0.3),rgba(132,157,172,.1),rgba(132,157,172,.05), rgba(216, 252, 117, 0.2), rgba(255, 230, 183, 0.2));
  backdrop-filter: blur(30rpx);

  font-size: 26rpx;
  color: rgba(255,255,255,.83);
}

.userinfo-verify {
  position: relative;
}
.userinfo-verify text {
  position: absolute;
  color: rgba(255,255,255,.6);
  width: 200rpx;
  height: 35rpx;
  right: 180rpx;
  top: 17.5rpx;
  font-size: 25rpx;
}
.userinfo-verify view {
  position: absolute;
  right: 60rpx;
  top: 10rpx;

  width: 125rpx;
  height: 35rpx;
  padding: 10rpx;

  font-size: 20rpx;
  text-align: center;
  color: rgb(30,31,66); 
  /* background-color: rgba(160, 192, 126, 0.8); */
  background: linear-gradient(130deg, rgb(141, 209, 194),rgb(197, 224, 168));

  border-radius: 50rpx;
}

/*============ motto ============*/
.userinfo-motto textarea {
  width: 80%;
  margin: 15rpx auto;
  height: 225rpx;
  padding: 20rpx;
  border: 2rpx rgba(181, 218, 211, 0.2) solid;
  background: linear-gradient(120deg, rgba(126, 230, 212, 0.2),rgba(126, 230, 212,0.1),rgba(147,147,147,0.05),rgba(255, 235, 121, 0.3));
  border-radius: 20rpx;
}

/*============ button ============*/
.userinfo-button.iconfont {
  position: absolute;
  right: 8%;
  bottom: 7%;

  display: block;
  z-index: 10;
  font-size: 160rpx;
  background: rgb(30,31,66); 
  /* 亮时候的颜色：linear-gradient(130deg, rgb(94,233,203),rgb(212,248,174))*/
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.userinfo-button-colorful.iconfont {
  background: linear-gradient(130deg, rgb(141, 209, 194),rgb(197, 224, 168));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/*=============== toast box ==================*/
.userinfo-verify-container {
  position: fixed;
  top: 0;
  right: -100%;

  height: 100vh;
  min-height: 100vh;
  width: 100%;
  min-width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;

  transition: .8s cubic-bezier(.8,.2,.8,1);
}
.userinfo-verify-container.shown {
  right: 0;
}

.verify-group {
  width: 80%;
  height: 400rpx;
  border-radius: 30rpx;
  transform: rotate(20deg);

  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  transition: .8s cubic-bezier(.8,.2,.8,1);
}
.userinfo-verify-container.shown .verify-group {
  transform: rotate(0deg);
}

.verify-group .userinfo-title-group {
  width: 80%;
}

.verify-group input {
  width: 60%;
  margin: 25rpx auto;
  height: 35rpx;
  padding: 15rpx;
  border-radius: 50rpx;
  border: 2rpx rgba(239, 252, 223, 0.1) solid;
  background: linear-gradient(113deg, rgba(202, 248, 253, 0.3),rgba(132,157,172,.1),rgba(132,157,172,.05), rgba(216, 252, 117, 0.2), rgba(255, 230, 183, 0.2));

  text-align: center;
  font-size: 35rpx;
  color: rgba(255,255,255,.83);
}

.verify-group .verify-bottom-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.verify-info-group {
  display: grid;
  grid-template-columns: repeat(2, auto);
  grid-gap: 5rpx;
}
.verify-info-group .iconfont {
  font-size: 35rpx;
  line-height: 35rpx;
  color: rgba(255,255,255,.6);
}
.verify-text-group {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 20rpx;
  color: rgba(255,255,255,.4);
}

.verify-function-group {
  margin-left: 25rpx;
  border-left: 2rpx solid rgba(255,255,255,.4);
}
.verify-function-group .iconfont {
  font-size: 75rpx;
  margin: 0 5rpx;
}
.verify-function-group .iconfont:nth-child(1) {
  margin-left: 15rpx;
  background:linear-gradient(70deg, rgb(193,206,245), rgb(221,138,184));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.verify-function-group .iconfont:nth-child(2) {
  background:linear-gradient(70deg, rgb(1,225,192), rgb(0,135,219));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/*=============== sticky ==================*/
.blog-sticky {
  -moz-user-select: -moz-none;
  -moz-user-select: none;
  -o-user-select:none;
  -khtml-user-select:none;
  -webkit-user-select:none;
  -ms-user-select:none;
  user-select:none;
  transform: rotate(30deg);
  
  transition: .8s cubic-bezier(.8,.2,.8,1);
}
.userinfo-verify-container.shown .blog-sticky {
  transform: rotate(0deg);
}

.todo-group {
  --button-width: 350px;
  --button-height: 200px;

  margin: 20px auto;
  height: var(--button-height);
  width: var(--button-width);

  position: relative;

  transform: translateZ(0);
  transition: 0.5s cubic-bezier(0.215, 0.61, 0.355, 1);
}

.todo-group .todo-paper {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;

  transform-origin: center top;
  transform-style: preserve-3d;

  perspective: 1000px;
}
.todo-group .todo-paper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;

  transform-origin: center top;
  transform: translateY(-100%);
  width: calc(var(--button-width) * 0.8);
  height: calc(var(--button-height) * 0.1);

  margin: 0 auto;
  background: rgba(239, 239, 239, 0.8);
  opacity: 0.7;
  transition: 0.65s cubic-bezier(0.215, 0.61, 0.355, 1);
}

.todo-group .todo-paper .todo-paper-bg {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: linear-gradient(104deg, #123597, #97ABFF);
  opacity: 0.7;
  transform-origin: center top;
  transform-style: preserve-3d;
  z-index: 2;
  transition: 0.65s cubic-bezier(0.215, 0.61, 0.355, 1);
}


.todo-group .todo-paper .todo-paper-bg::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  transform-origin: center top;
  width: calc(var(--button-width) * 0.8);
  height: calc(var(--button-height) * 0.1);
  margin: 0 auto;
  background: rgba(239, 239, 239, 0.8);
  backface-visibility: hidden;
}

.todo-group .cover-content-container {
  position: absolute;
  top: 0;
  left: 0;
  perspective: 1000;
  width: 100%;
  height: 100%;
  color: white;
}

.todo-group .cover-content {
  position: absolute;
  top: 0;
  left: 0;
  transform-origin: center top;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: all 0.65s cubic-bezier(0.215, 0.61, 0.355, 1);
}
