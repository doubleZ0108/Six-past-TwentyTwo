<!--miniprogram/pages/index/index.wxml-->
<view class="index-container">
  <view class="index-guide-container" style="display: {{ guide_show ? 'flex' : 'none' }}">
    <button open-type="getUserInfo" bindgetuserinfo="onUserInfoTap">获取用户信息</button>
  </view>


  <view class="LoadingSunGroup {{ bg_blur ? 'blur' : '' }} {{ near_end ? 'end' : ''}} {{ day_or_night=='day' ? '' : 'end' }}">
    <image class="sun" src="../../resource/img/index/loading-sun/sun.svg"></image>

    <image class="eye" src="../../resource/img/index/loading-sun/eye.svg"></image>

    <image class="line" src="../../resource/img/index/loading-sun/line.svg"></image>

    <view class="blank-block"></view>
    <text class="text">等等嘛，你要等阳光照进来～</text>
  </view>


  <view class="LoadingMoonGroup {{ bg_blur ? 'blur' : '' }} {{ near_end ? 'end' : ''}} {{ day_or_night=='night' ? '' : 'end' }}">
      <image class="moon" src="../../resource/img/index/loading-moon/moon.svg"></image>

      <image class="line" src="../../resource/img/index/loading-moon/line.svg"></image>

      <image class="cloud-left" src="../../resource/img/index/loading-moon/cloud-left.svg"></image>

      <image class="cloud-right" src="../../resource/img/index/loading-moon/cloud-right.svg"></image>

      <image class="sleep-z" src="../../resource/img/index/loading-moon/sleep-z.svg"></image>

      <view class="blank-block"></view>
      <text class="text">等等嘛，你要等阳光照进来～</text>
  </view>

</view>