/* miniprogram/pages/comment/comment.wxss */
@import '../../style/iconfont.wxss';

.bg-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.card-container {
  --card-width: 80%;
  --card-height: 230rpx;
  height: var(--card-height);
  width: var(--card-width);
  margin: 90rpx auto 0;

  background: linear-gradient(68deg, rgba(19, 162, 206, 0.15),rgba(19, 122, 206, 0.15), rgba(33, 26, 74, 0.38), rgba(65, 95, 158, 0.38));
  border-radius: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(55, 12, 245, 0.15);
  backdrop-filter: blur(90rpx);
  border: rgba(52, 88, 121, .38) 1rpx solid;

  transition: 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.card-people {
  width: 80%;
  height: calc(var(--card-height)*0.5);
  margin: 0 auto;

  display: grid;
  grid-template-columns: 3fr 1fr 3fr;
  justify-items: center;

  grid-gap: 15rpx;
  align-items: center;
}

.card-people text {
  color: rgba(255,255,255,.83);
  font-size: 33rpx;
  font-weight: 400;

  overflow: hidden;
  transition: 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.card-people .iconfont {
  font-size: 50rpx;
  background: linear-gradient(130deg, rgb(110, 240, 201),rgb(152, 163, 223), rgb(66, 210, 247)); 
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;

  transition: 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}


/********** unfold card ***********/
.card-info-unfold text {
  display: block;
}

/********** AFTER TAB ***********/
.card-container-unfold {
  height: auto;
  color: rgba(255,255,255,.83);
}

.card-container-unfold .card-people text {
  font-size: 35rpx;
}
.card-container-unfold .card-people .iconfont {
  font-size: 65rpx;
}

.card-container-unfold .card-info {
  opacity: 0;
  display: none;
}

.card-container-unfold .card-info-unfold {
  opacity: 1;
  height: calc(var(--card-height-unfold) - calc(var(--card-height)*0.5));
  width: 80%;
  margin: 0 auto;
}

/*========== tag ============*/
.card-info-unfold-tag {
  width: 100%;
  border-bottom: 3rpx solid rgba(255,255,255,.15);
}
.card-info-unfold-tag text {
  font-size: 25rpx;

  display: inline-block;
  background-color: rgba(126, 126, 126, 0.4);
  border-radius: 15rpx;
  padding: 10rpx;
  margin: 0 10rpx 15rpx;
}

/*========== description ============*/
.card-info-unfold-description {
  height: 250rpx;
  width: 95%;
  margin: 25rpx auto 35rpx auto;
  font-size: 25rpx;  
  text-align: center;
  text-indent: 1rem;
  word-break: break-all;
  
}

/*========== function ============*/
.card-info-unfold-function {
  width: 80%;
  height: 50rpx;
  margin: 25rpx auto 0;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  border-top: 3rpx solid rgba(255,255,255,.15);
}

.card-info-unfold-function .iconfont {
  font-size: 50rpx;
  color: rgba(255,255,255.8);
}

.function-favorite {
  margin-left: 25rpx;
}

.function-star {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 15rpx;
}

/************* textarea ***************/
.comment-textarea-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 250rpx;
}
.comment-textarea-container textarea {
  position: absolute;
  height: 100%;
  width: 100%;
  padding: 20rpx;
  background: rgba(0, 0, 0, .6);
  backdrop-filter: blur(30rpx);
}

.comment-textarea-container button {
  /* TODO button有默认padding 只能去掉之后调小 */
  position: absolute;
  bottom: 5%;
  right: 5%;
  width: 150rpx;
  height: 30rpx;
  color: rgb(44,42,85);
  font-size: 30rpx;
  border-radius: 50rpx;
  background: linear-gradient(104deg, rgb(111, 200, 209),rgb(125,179,209), rgb(129, 167, 210));
}


/************* comment list ***************/
.comment-list-container {
  width: 80%;
  margin: 50rpx auto;
}

.comment-gap {
  height: 300rpx;
}

.comment-group {
  /* background: black; */
  width: 100%;
  display: grid;
  grid-template-columns: 1fr 4fr;
  align-items: flex-start;
  justify-content: center;
  margin: 50rpx 0;
}

.comment-group image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.comment-text-group {
  border-bottom: 3rpx white solid;
  color: white;
}

.comment-text-group view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.comment-name {
  font-size: 40rpx;
}
.comment-content {
  font-size: 20rpx;
  color: rgba(255,255,255,.83);
}