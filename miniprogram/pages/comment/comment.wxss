/* miniprogram/pages/comment/comment.wxss */
@import '../../style/iconfont.wxss';

.bg-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.card-title-icon {
  display: block;
  margin-top: 40rpx;
  text-align: center;
  font-size: 80rpx;
  /* color: linear-gradient(130deg, rgb(111, 200, 209),rgb(125,179,209), rgb(129, 167, 210),rgb(211, 170, 201));  */
  background: linear-gradient(130deg, rgb(125,179,209),rgb(241, 149, 185)); 
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.card-container {
  --card-width: 80%;
  --card-height: 230rpx;
  height: var(--card-height);
  width: var(--card-width);
  margin: 30rpx auto 0;

  background: linear-gradient(68deg, rgba(19, 162, 206, 0.15),rgba(19, 122, 206, 0.15), rgba(33, 26, 74, 0.38), rgba(65, 95, 158, 0.38));
  border-radius: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(55, 12, 245, 0.15);
  backdrop-filter: blur(90rpx);
  border: rgba(52, 88, 121, .38) 1rpx solid;

  transition: 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.card-people {
  width: 80%;
  height: calc(var(--card-height)*0.5);
  margin: 0 auto;

  display: grid;
  grid-template-columns: 3fr 1fr 3fr;
  justify-items: center;

  grid-gap: 15rpx;
  align-items: center;
}

.card-people text {
  color: rgba(255,255,255,.83);
  font-size: 33rpx;
  font-weight: 400;

  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;

  transition: 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.card-people .iconfont {
  font-size: 50rpx;
  background: linear-gradient(130deg, rgb(111, 200, 209),rgb(125,179,209), rgb(129, 167, 210)); 
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;

  transition: 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}


/********** unfold card ***********/
.card-info-unfold text {
  display: block;
}

/********** AFTER TAB ***********/
.card-container-unfold {
  height: auto;
  color: rgba(255,255,255,.83);
}

.card-container-unfold .card-people text {
  font-size: 35rpx;
}
.card-container-unfold .card-people .iconfont {
  font-size: 65rpx;
}

.card-container-unfold .card-info {
  opacity: 0;
  display: none;
}

.card-container-unfold .card-info-unfold {
  opacity: 1;
  height: calc(var(--card-height-unfold) - calc(var(--card-height)*0.5));
  width: 80%;
  margin: 0 auto;
}

/*========== tag ============*/
.card-info-unfold-tag {
  width: 100%;
  border-bottom: 3rpx solid rgba(255,255,255,.15);
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
}
.card-info-unfold-tag text {
  font-size: 25rpx;

  display: inline-block;
  background-color: rgba(126, 126, 126, 0.4);
  border-radius: 15rpx;
  padding: 10rpx;
  margin: 0 10rpx 15rpx;
}
.card-info-unfold-tag text:nth-child(1) {
  max-width: 70%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/*========== description ============*/
.card-info-unfold-description {
  height: 250rpx;
  width: 95%;
  margin: 25rpx auto 35rpx auto;
  font-size: 25rpx;  
  text-align: center;
  text-indent: 1rem;
  word-break: break-all;
}

/*========== function ============*/
.card-info-unfold-function {
  width: 80%;
  height: 50rpx;
  margin: 20rpx auto 0;
  padding-top: 5rpx;
  display: flex;
  flex-direction: row;
  border-top: 3rpx solid rgba(255,255,255, 0.15);
}

.card-info-unfold-function .iconfont {
  font-size: 40rpx;
  color: rgba(255,255,255,.6);
}

.function-favorite {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 25rpx;
  font-size: 40rpx;
}

.function-star {
  display: flex;
  font-size: 25rpx;
  flex-direction: row;
  align-items: center;
  margin: 0 15rpx;
  color: rgba(255,255,255,.6);
}

.function-star .iconfont{
  font-size: 40rpx;
}

.iconfont-favorite-colorful {
  background: rgba(255, 223, 40, 0.9);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.iconfont-star-colorful {
  background: rgba(124, 200, 245, 0.8);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/************* textarea ***************/
.comment-textarea-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  min-height: 100rpx;
  background: linear-gradient(160deg, rgba(177, 247, 229, .38),rgba(29,32,65,.2),rgba(29,32,65,.1),rgba(29,32,65,.1), rgba(240, 210, 166, .2));
  backdrop-filter: blur(30rpx);
  border-top: 1rpx rgba(255,255,255,.38) solid;
}

.comment-textarea-container textarea {
  position: absolute;
  height: 40%;
  width: 66%;
  margin: 15rpx;
  padding: 15rpx;
  background: rgba(29,32,65,.38);
  color: rgba(255,255,255,.6);
  /* backdrop-filter: blur(30rpx); */
  /* border: 1rpx rgba(40,52,78,.83) solid; */
}

.comment-textarea-container text {
  /* TODO button有默认padding 只能去掉之后调小 */
  position: absolute;
  display: block;
  bottom: 20rpx;
  right: 3%;
  width: 20%;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  text-align: center;

  color: rgba(255,255,255,.83);
  background: rgb(44,42,85);
  background: linear-gradient(104deg, rgb(44,42,85),rgb(44,42,85),rgb(111, 200, 209),rgb(129, 167, 210),rgb(129, 167, 210));
  background-position: 0% 0%;
  background-size: 300%;
  transition: .4s cubic-bezier(.8,.2,.8,1);
}
.comment-textarea-container text.comment-submit-colorful {
  color: rgba(44,42,85,1);
  /* background: linear-gradient(104deg, rgb(111, 200, 209),rgb(125,179,209), rgb(129, 167, 210)); */
  background-position: 100%;
  transition: .4s cubic-bezier(.8,.2,.8,1);
}


/************* comment list ***************/
.comment-list-container {
  width: 80%;
  margin: 50rpx auto;
}

.comment-gap {
  height: 300rpx;
}

.comment-group {
  /* background: black; */
  width: 100%;
  display: grid;
  grid-template-columns: 1fr 4fr;
  align-items: flex-start;
  justify-content: center;
  margin: 50rpx 0;

  opacity: 1;
  transform: translateY(50px);
  transition: .8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.comment-group.comment-group-animate {
  animation: 2s emerge cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
}

@keyframes emerge {
  to {
      opacity: 1;
      transform: translateY(0px);
  }
}


.comment-group image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.comment-text-group {
  padding-top: 20rpx;
  border-top: 2rpx rgba(255,255,255,.38) solid;
  color: rgba(255,255,255,.83);
}

.comment-text-group view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.comment-name {
  font-size: 30rpx;
  line-height: 40rpx;
}
.comment-floor {
  font-size: 20rpx;
  color: rgba(255,255,255,.5);
}
.comment-content {
  display: block;
  margin-top: 15rpx;
  font-size: 25rpx;
  color: rgba(255,255,255,.6);
}



