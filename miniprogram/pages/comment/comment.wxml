  </view>
</view>

<view class="card-info-unfold-function">
  <view class="function-favorite">
    <text class="iconfont iconshouye"></text>
  </view>
  <view class="function-star">
    <text class="iconfont iconshouye"></text>
    <text>99</text>
  </view>
</view>

<view class="comment-list-container">

  <view wx:for="{{ commentItem }}" wx:key="{{ index }}"
    class="comment-group">
    <image src="{{ item.avatarSrc }}"></image>
    <view class="comment-text-group">
      <view>
        <text class="comment-name">{{ item.name }}</text>
        <text class="comment-floor">{{ index+1 }}楼</text>
      </view>
      <text class="comment-content">{{ item.content }}</text>
    </view>
  </view>

  <view class="comment-gap"></view>

</view>

<view class="comment-textarea-container">
  <form bindsubmit="commentSubmit">
    <textarea placeholder="写下你的评论" name="comment" placeholder-style="color: rgba(255,255,255,.6);"
      auto-focus fixed adjust-position disable-default-padding></textarea>
    <button form-type="submit">发送</button>
  </form>
</view>